# NPM Configuration

# Performance settings
cache-max=86400000
fund=false
audit=false

# Security settings
audit-level=moderate

# Package resolution
save-exact=true
save-prefix=""

# Registry settings (uncomment if using private registry)
# registry=https://registry.npmjs.org/
# always-auth=false

# Development settings
init-author-name=Felix Geelhaar
init-license=MIT
init-version=0.1.0

# Logging
loglevel=warn

# Progress
progress=true
unicode=true

# Node version enforcement
engine-strict=true

# Package lock
package-lock=true
shrinkwrap=false

# Install behavior
save=true

# Workspace settings
workspaces-update=true

# Legacy peer deps (for compatibility)
legacy-peer-deps=false

# Optional dependencies
optional=true

# Global packages location (managed by version manager)
# prefix is handled by nvm/volta/fnm